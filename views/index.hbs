<div class="container">
	<div class="jumbotron">
		<p>
			<h1>News and Comment</h1>
		</p>
	</div>

	<div class="row">

		<div class="col-md-8">
			<div class="text-center">
				<h2>Links:</h2>
			</div>

			<ul id="list" class="list-group">
			{{#each result}}
				<a href={{link}}>Link {{@index}}</a><br/>
			{{/each}}
			</ul>
		</div> <!-- End col -->

		<div class="col-md-4 min-height-200">
			<div class="text-center">
				<h2>Comments:</h2>
			</div>
			<div id="comments">
			{{#each comments}}
				{{comment}}<br/>
			{{/each}}
			</div>
			<button class="btn btn-danger" type="button" id="delete">Delete</button>
		</div>

		<div class="col-md-4 min-height-200">
			<div class="text-center">
				<h2>Add comment:</h2>
			</div>
			<input type="text" class="form-control" id="new_comment" maxlength="30">
			<button class="btn btn-success" type="button" id="add">Add</button>
		</div>

	</div> <!-- End row -->

	<br/>

	<!-- Info -->
	<div class="row">
		<div class="col-md-12">
			<p>
				<a href="https://github.com/mattsplats/to-do">GitHub Repo</a>
			</p>
		</div>
	</div>
</div> <!-- End row -->